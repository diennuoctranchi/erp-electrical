<% content_for :title do %><%= @diary.get_name %><% end %>
<% content_for :page_title do %>    
    <a href="<%= erp_electrical.backend_diaries_path %>"><i class="fa fa-rss"></i> <%= t('.diaries') %></a> / 
    <%= t('.edit') %>: <%= @diary.get_name %>
<% end %>
<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {text: t('.create'), href: erp_electrical.new_backend_diary_path, class: 'btn-noborder'}) %>
<% end %>
<div class="row">
    <div class="col-md-12">
        <% if @diary.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        <%= render 'form', diary: @diary %>
    </div>
</div>