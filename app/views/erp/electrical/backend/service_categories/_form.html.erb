<%= form_for([erp_electrical, :backend, service_category], html: {multipart: true}) do |f| %>
    <div class="row">
        <div class="col-md-6">
            <%= erp_form_control('image', {
                img_src: service_category.image,
                name: 'service_category[image]',
                width: 150,
                height: 150,
                select: t('.image_select'),
                update: t('.image_update')
            }) %>
        </div>
        <div class="col-md-6">
            <%= erp_form_control('image', {
                img_src: service_category.icon,
                name: 'service_category[icon]',
                width: 150,
                height: 150,
                select: t('.icon_select'),
                update: t('.icon_update')
            }) %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">
                            <%= erp_form_control("text", {
                                name: 'service_category[title]',
                                value: service_category.get_title,                   
                                label: t('.title'),
                                placeholder: t('.placeholder_title'),
                                required: true,
                                errors: service_category.errors.full_messages_for(:title)
                            }) %>
                        </div>                       
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <%= erp_form_control("text", {
                                name: 'service_category[name]',
                                value: service_category.get_name,                   
                                label: t('.name'),
                                placeholder: t('.placeholder_name'),
                                required: true,
                                errors: service_category.errors.full_messages_for(:name)
                            }) %>
                        </div>
                        <div class="col-md-6">
                            <%= erp_form_control("dataselect", {
                                name: 'service_category[parent_id]',
                                value: service_category.parent_id,
                                text: service_category.get_parent_name,
                                placeholder: t('.choose_parent_service_category'),
                                label: t('.parent_service_category'),
                                url: erp_electrical.dataselect_backend_service_categories_path(format: 'json')
                            }) %>
                        </div>                        
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <%= erp_form_control("textarea", {
                                name: 'service_category[short_description]',
                                value: service_category.short_description,                   
                                label: t('.short_description'),
                                placeholder: t('.placeholder_short_description')
                            }) %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <%= erp_form_control("textarea", {
                                name: 'service_category[meta_keywords]',
                                value: service_category.meta_keywords,                   
                                label: t('.meta_keywords'),
                                placeholder: t('.placeholder_meta_keywords')
                            }) %>
                        </div>
                        <div class="col-md-6">
                            <%= erp_form_control("textarea", {
                                name: 'service_category[meta_description]',
                                value: service_category.meta_description,                   
                                label: t('.meta_description'),
                                placeholder: t('.placeholder_meta_description')
                            }) %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <%= erp_form_control("text", {
                                name: 'service_category[tags]',
                                value: service_category.tags,                   
                                label: t('.tags'),
                                placeholder: t('.placeholder_tags')
                            }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <%= erp_form_control("editor", {
                        name: 'service_category[content]',
                        value: service_category.content,
                        label: t('.content')
                    }) %>
                </div>
            </div>
        </div>
    </div>
    <%= erp_component('button/save', { text: t('.submit') }) %>
    <%= erp_component('button/cancel', { text: t('.cancel'), href: erp_electrical.backend_service_categories_path }) %>
<% end %>