<% content_for :title do %><%= @service_category.get_name %><% end %>
<% content_for :page_title do %>    
    <a href="<%= erp_electrical.backend_service_categories_path %>"><i class="fa fa-rss"></i> <%= t('.service_categories') %></a> / 
    <%= t('.edit') %>: <%= @service_category.get_name %>
<% end %>
<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {text: t('.create'), href: erp_electrical.new_backend_service_category_path, class: 'btn-noborder'}) %>
<% end %>
<div class="row">
    <div class="col-md-12">
        <% if @service_category.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        <%= render 'form', service_category: @service_category %>
    </div>
</div>