<% content_for :title do %>
    <%= t('.blogs') %>
<% end %>
<% content_for :page_title do %>
    <i class="fa fa-th"></i> <%= t('.blogs') %>
<% end %>
<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {text: t('.create'), href: erp_electrical.new_backend_blog_path, class: 'btn-noborder'}) %>
<% end %>
<%= erp_datalist(
    url: erp_electrical.list_backend_blogs_path,
    keywords: [
        {text: t('.name'), name: 'erp_electrical_blogs.name'}
    ],
    columns: [
        {text: t('image'), name: 'image', value: true, checked: true},
        {text: t('.name'), name: 'name', value: true, checked: true},
        {text: t('created_at'), name: 'created_at', value: true, checked: false}
    ],
    sort: {sort_by: 'erp_electrical_blogs.created_at', sort_direction: 'desc'}
) %>