<% content_for :title do %><%= @blog.get_name %><% end %>
<% content_for :page_title do %>    
    <a href="<%= erp_electrical.backend_blogs_path %>"><i class="fa fa-th"></i> <%= t('.blogs') %></a> / 
    <%= t('.edit') %>: <%= @blog.get_name %>
<% end %>
<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {text: t('.create'), href: erp_electrical.new_backend_blog_path, class: 'btn-noborder'}) %>
<% end %>
<div class="row">
    <div class="col-md-12">
        <% if @blog.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        <%= render 'form', blog: @blog %>
    </div>
</div>